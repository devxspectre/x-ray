{
  "name": "xray-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm-run-all -p dev:*",
    "dev:api": "npm run dev -w @xray/api",
    "dev:dashboard": "npm run dev -w @xray/dashboard",
    "demo": "npm run start -w @xray/demo",
    "demo:multiagent": "npm run multiagent -w @xray/demo"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.3.3"
  }
}
